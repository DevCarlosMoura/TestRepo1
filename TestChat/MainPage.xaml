<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestChat.MainPage">

    <StackLayout Padding="30" VerticalOptions="Center">

        <Image Source="dotnet_bot.png" HeightRequest="120" HorizontalOptions="Center"/>

        <Entry x:Name="EmailEntry" Placeholder="E-mail" Keyboard="Email" BackgroundColor="White"/>

        <Entry x:Name="PasswordEntry" Placeholder="Senha" IsPassword="True" BackgroundColor="White"/>

        <Button Text="Entrar" TextColor="White" BackgroundColor="#007AFF"/>

        <Label Text="Esqueci minha senha" HorizontalOptions="Center" TextColor="#007AFF" FontSize="Medium" 
               Margin="0,10,0,0"/>

    </StackLayout>
</ContentPage>
